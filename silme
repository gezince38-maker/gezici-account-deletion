    <script>
        function openEmail() {
            const subject = 'Hesap Silme Talebi';
            const body = `Merhaba,

Hesabımı silmek istiyorum.

Kullanıcı Bilgileri:
- E-posta: [BURAYA E-POSTA ADRESİNİZİ YAZIN]
- Kullanıcı ID: [BURAYA KULLANICI ID'NİZİ YAZIN]

Lütfen hesabımı ve tüm verilerimi silin.

Teşekkürler.`;

            const mailtoLink = `mailto:privacy@gezici.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
            window.location.href = mailtoLink;
        }

        // Deep link handling
        function openApp() {
            const appUrl = 'gezici://settings/delete-account';
            const fallbackUrl = 'https://play.google.com/store/apps/details?id=com.company.gezici';
            
            // Try to open the app
            window.location.href = appUrl;
            
            // Fallback to Play Store after 2 seconds
            setTimeout(() => {
                window.location.href = fallbackUrl;
            }, 2000);
        }

        // Auto-detect if user is on mobile
        if (/Android|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)) {
            document.addEventListener('DOMContentLoaded', function() {
                const appButton = document.querySelector('.app-link');
                appButton.style.display = 'block';
            });
        }
    </script>
